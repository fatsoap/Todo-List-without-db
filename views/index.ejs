<html>
  <head>
    <style>
      div {
        width: 100vw;
        height: 100vh;
        background-color: #f5eef8;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
      }
      header {
        width: 60%;
        height: 100px;
        padding-top: 100px;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      h2 {
        font-size: 38;
        color: #3498db;
        font-family: Georgia, serif;
      }
      main {
        width: 60%;
        min-height: 100px;
        background-color: #d4efdf;
        padding: 8px;
        border-style: solid;
        border-width: 3px;
        border-color: #d4efdf;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      p {
        color: black;
        width: 100%;
        font-size: 18;
        margin: 0;
        padding: 5 0 5 3;
        font-family: Georgia, serif;
      }
      p:nth-child(even) {
        background-color: #e9e8e8;
      }
      p:nth-child(odd) {
        background-color: white;
      }
      footer {
        width: 60%;
        margin-top: 20px;
      }
      form {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      section {
        width: 70%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin: 10px 0 0 0;
      }
      article {
        width: 70%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
      input {
        width: 70%;
        margin: 0px 10px 0 0;
        border: 0px;
        font-size: 18px;
      }
      button {
        background: #d4efdf;
        font-size: 15px;
      }
    </style>
  </head>
  <body>
    <div>
      <header>
        <h2>Todo List</h2>
      </header>
      <main>
        <% for (let i=0; i<data.length;  i++) { %>
        <p><%= i %>. <%=  data[i] %></p>
        <% } %>
      </main>
      <footer>
        <form action="http://localhost:8080/" method="POST">
          <section>
            <input name="add_todo" />
            <button>Add Todo</button>
          </section>
          <section>
            <article>
              <input
                style="width: calc(20% - 10px); text-align: center"
                name="update_id"
                placeholder="id"
                type="number"
              />
              <input style="width: 79%; margin-right: 0px" name="update_todo" />
            </article>
            <button>Update Todo</button>
          </section>
          <section>
            <input name="delete_id" placeholder="delete id" type="number"/>
            <button>Delete Todo</button>
          </section>
        </form>
      </footer>
    </div>
  </body>
</html>
